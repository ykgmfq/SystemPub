{
  "name": "Go",
  "image": "mcr.microsoft.com/devcontainers/go:1.25",
  "features": {
    "ghcr.io/devcontainers-extra/features/apt-packages:1": {
      "packages": "just"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "redhat.vscode-yaml",
        "github.vscode-github-actions",
        "nefrob.vscode-just-syntax"
      ]
    }
  },
  "postStartCommand": "go version"
}
